generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Scoreboard {
  id String @id @default(uuid())
  game Game?
  map Image @relation(fields: [mapid], references: [id])
  mapid Int
  username String
  time DateTime

}

model Game {
  id String @id @default(uuid())
  startTime DateTime
  endTime DateTime?
  status String
  gameChars Character[]  @relation("gameGoal")
  markers Character[] @relation("gameProgress")
  score Scoreboard? @relation(fields: [scoreid], references: [id])
  scoreid String? @unique
}

model Character {
  id String @id @default(uuid())
  name String
  url String
  coordX Float
  coordY Float
  map Image @relation(fields: [mapid], references: [id])
  gameSet Game[] @relation("gameGoal")
  gameTrack Game[] @relation("gameProgress")
  mapid Int

}

model Image {
  id Int @id @default(autoincrement())
  name String
  url String
  chars Character[]
  scores Scoreboard[]
}